            <Label x:Name="ResultError"  FontSize="Large" TextColor="Blue"/>
            <StackLayout BackgroundColor="White" Padding="40" VerticalOptions="Center">

                <Label LineBreakMode="WordWrap">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Geo-bg.eu Хидрогеоложки и инженерногеоложки доклади" FontSize="18" TextColor="CornflowerBlue">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Handle_Tapped" />
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

            </StackLayout>

        </StackLayout>
